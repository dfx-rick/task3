<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/toast"
        android:layout_width="729dp"
        android:layout_height="84dp"
        android:layout_marginStart="228dp"
        android:layout_marginEnd="229dp"
        android:onClick="toast"
        android:text="@string/toast"
        android:textColorLink="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/count"
        android:layout_width="729dp"
        android:layout_height="93dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="82dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="84dp"
        android:onClick="count"
        android:text="@string/count"
        android:textColorHighlight="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_count"
        app:layout_constraintVertical_bias="0.472" />

    <TextView
        android:id="@+id/show_count"
        android:layout_width="255dp"
        android:layout_height="197dp"
        android:layout_marginStart="337dp"
        android:layout_marginEnd="300dp"
        android:backgroundTint="#297E76"
        android:foregroundTint="#E10D0D"
        android:gravity="center_vertical"
        android:text="@string/count_initial_value"
        android:textAlignment="gravity"
        android:textSize="120sp"
        app:drawableTint="#951515"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toast" />
</androidx.constraintlayout.widget.ConstraintLayout>